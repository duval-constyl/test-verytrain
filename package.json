  "bugs": {
    "url": "https://github.com/duval-constyl/test-verytrain/issues"
  },
  "homepage": "https://github.com/duval-constyl/test-verytrain#readme",
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
