{
  "name": "test-verytrain",
  "version": "1.0.0",
  "description": "Implémenter et déployer une API REST qui justifie un texte passé en paramètre.",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "docker:build": "docker build -t justify-api .",
    "docker:run": "docker run -p 3000:3000 justify-api",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose up justify-api-dev",
    "docker:test": "docker-compose up justify-api-test",
    "docker:clean": "docker system prune -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duval-constyl/test-verytrain.git"
  },
  "keywords": [],
